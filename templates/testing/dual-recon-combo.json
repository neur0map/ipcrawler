{
  "name": "dual-recon-combo",
  "description": "Comprehensive reconnaissance with nmap service detection followed by intelligent web enumeration",
  "author": "ipcrawler",
  "version": "1.0.0",
  "timeout": 480,
  "tags": ["htb", "recon", "combo", "smart", "multi"],
  "plugins": [
    {
      "name": "nmap-service-scan",
      "tool": "nmap",
      "preset": "nmap.service_scan",
      "args": ["{{target}}"],
      "timeout": 300,
      "description": "Service detection and version scanning"
    },
    {
      "name": "smart-directory-enum",
      "tool": "gobuster", 
      "preset": "gobuster.ctf_dir_fast",
      "args": ["-u", "http://{{target}}", "-w", "auto_wordlist"],
      "wordlist_hint": "directory",
      "timeout": 180,
      "description": "Intelligent web directory enumeration"
    }
  ]
}