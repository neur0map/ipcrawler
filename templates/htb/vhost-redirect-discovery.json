{
  "name": "vhost-redirect-discovery",
  "tool": "curl",
  "args": ["-s", "-I", "-L", "--max-redirs", "5", "-H", "Host: {{target}}", "http://{{target}}/", "-w", "Status: %{http_code}\\nRedirect: %{redirect_url}\\nFinal URL: %{url_effective}\\n"],
  "description": "Virtual host discovery through redirect analysis using curl",
  "author": "HTB Team",
  "version": "1.0.0",
  "tags": ["htb", "web", "vhost", "redirect", "enumeration"],
  "timeout": 30,
  "target_types": ["domain", "ip"],
  "severity": "low",
  "stealth": true,
  "parallel_safe": true
}